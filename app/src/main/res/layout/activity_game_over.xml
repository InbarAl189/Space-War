<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/game_over_background">




    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="280dp"
        android:layout_height="190dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:background="@drawable/game_over_logo" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="-10dp"
        android:layout_gravity="center"
        android:id="@+id/space_ship_gif_view"
        android:src="@drawable/x_gif"/>


    <LinearLayout
        android:id="@+id/txt_layout"
        android:layout_width="320dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        android:layout_marginTop="-10dp"
        android:background="@drawable/win_layout_back">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_game_score"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:textSize="30dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/score_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:textSize="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_name"
            android:textColor="@color/white"
            android:fontFamily="@font/aldrich"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/aldrich"
            android:textAlignment="center"
            android:background="@drawable/edit_text"
            android:textColorHint="@color/white"
            android:id="@+id/name_edit_text"/>
    </LinearLayout>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/main_custom_btn"
        android:fontFamily="@font/aldrich"
        android:layout_gravity="center"
        android:paddingBottom="5dp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="-10dp"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        android:text="@string/ok" />


</LinearLayout>